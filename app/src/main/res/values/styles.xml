<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">@color/colorTransparent</item>
<!--        <item name="color">@color/colorPrimaryLightButton</item>-->
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
<!--        <item name="colorAccent">@color/colorAccent</item>-->
    </style>




    <style name="AppThemeCompat" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:color">@color/colorPrimaryLightButton</item>
    </style>


    <!-- ======================== SETUP MATERIAL OUTLINE BOX EDIT TEXT ======================= -->

    <style name="Widget.Shrine.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/colorGrayLight</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="boxStrokeColor">@color/colorWhite</item>
    </style>


    <!-- ======================== SETUP MATERIAL CARD CORNER ======================= -->

    <style name="Corner.Login" parent="">
        <item name="android:color">@color/colorPrimaryLightButton</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">40dp</item>
        <item name="cornerSizeTopLeft">40dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Corner.Register" parent="">
        <item name="android:color">@color/colorPrimaryLightButton</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">40dp</item>
        <item name="cornerSizeTopLeft">40dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Corner.Home" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Corner.Profil" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
        <item name="cornerSizeBottomLeft">15dp</item>
    </style>

    <style name="Corner.Profil_Bottom" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


<!--    ======================== SETUP BUTTON STYLE =========================    -->



    <style name="AppThemeCustomNavbar" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorGrayLight</item>
    </style>




</resources>
